@model SHIVAM_ECommerce.Models.Category

@{
    ViewBag.Title = "Create";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/Category">Category</a>
    </li>
    <li class="breadcrumb-item active">Category Create</li>
</ol>

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fa fa-plus"></i> Create New Category</h3>
    </div>
    <div class="card-body">
     @using (Html.BeginForm("Create", "Category", FormMethod.Post, 
                            new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryName, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.CategoryName,new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(model => model.CategoryName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ParentCategory, "ParentCategory", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                     
                        @Html.DropDownList("ParentCategory", String.Empty)

                        @Html.ValidationMessageFor(model => model.ParentCategory)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Show at home</label>
                    <label class="custom-control custom-checkbox">
                        @Html.CheckBoxFor(model => model.IsTopCategory,
       new Dictionary<string, object> { { "class", "custom-control-input" } })


                        <span class="custom-control-label"></span>
                    </label>

                </div>
                @*<div class="form-group">
                    @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IsActive)
                        @Html.ValidationMessageFor(model => model.IsActive)
                    </div>
                </div>*@

                <div class="form-group">

                    <div class="col-md-10">
                        <label for="file">Upload Image:</label>
                        <input type="file" name="file" id="file" style="width: 100%;" /> 
                    </div>

                    
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Description,new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-space">Create</button>
                        <button type="reset" class="btn btn-secondary btn-space">Cancel</button>
                    </div>
                     
                </div>
            </div>
        }
    </div>

</div>





@section Scripts {


    <script>
        $("#ParentCategory").addClass("form-control col-md-5")
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}
