@model IEnumerable<SHIVAM_ECommerce.Models.emailrecord>

@{
    
    ViewBag.Title = "Index";
}

      <ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Email Records</a>
    </li>
    <li class="breadcrumb-item active">Email Records List</li>
     </ol>




<div class="card">
            <div class="card-header">

             <h3 class="card-title"><i class="fa fa-list"></i> Email Records </h3>
        
             </div>
    <div class="card-body">
        <table id="myTable" class="table table-striped table-bordered dt-responsive">
            <thead>
                <tr>
                    <th>Email Sender</th>
                    <th>Email Receiver</th>
                    <th>Send Date</th>
                    <th>Subject</th>
                    <th>Message</th>
                    @*<th>Action</th>*@
                  
                </tr>
            </thead>
         
        </table>
    


</div>
</div>

