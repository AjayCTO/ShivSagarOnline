@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";

}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Claims Master</a>
    </li>
    <li class="breadcrumb-item active">Claims</li>
</ol>
<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fa fa-list"></i> Enter Name of Supplier/SupplierUser</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                @*<input type="text" class="form-control" id="Name" name="Name"/>*@
                @Html.DropDownList("UserName", new SelectList(ViewBag.UserName, "UserName", "UserName"), new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                <a id="getData" class="btn btn-success" style="color:white"> <i class="fa fa-search"></i> Get Data</a>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-header">

        <h3 class="card-title"><i class="fa fa-list"></i> Claims</h3>
        @*<div class="flex-fill text-right">
                <a href="/ManageClaims/Create" class="btn btn-success"> <i class="fa fa-plus"></i> Add New UserClaim</a>
            </div>*@
    </div>
    <div class="card-body">
        <table id="myTable" class="table table-striped table-bordered dt-responsive">
            <thead>
                <tr>
                    <th>Claims Type</th>
                    <th>Claim Value</th>
                    <th>Is Active</th>
                    <th>Action</th>
                </tr>
            </thead>
        </table>
    </div>
</div>




@section scripts{



    <script>
        var TableData;

        function GetData() {
            TableData = $("#myTable").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/ManageClaims/LoadData",
                    "type": "POST",
                    "datatype": "json",
                    "data": function (d) {
                        d.UserName = $('#UserName :selected').text();
                    }
                },
                "columns": [

                    {

                        "data": "ClaimType", "name": "ClaimType", "autoWidth": true
                    },
                     {

                         "data": "DisplayLabel", "name": "DisplayLabel", "autoWidth": true
                     },
                     {

                         "data": "IsActive", "name": "IsActive", "autoWidth": true
                     },

                     {
                         "orderable": false,
                         "mRender": function (data, type, row) {
                             return '<a href="/ManageClaims/Edit?id=' + row.Id + '" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><i class="fa fa-pencil"  align="center"></i></a>  ';
                         }
                     },
                ]
            });

        }

        $(document).ready(function () {
            GetData();
            $("#getData").click(function () {

                TableData.clear().draw();

            });


        });

    </script>
}


