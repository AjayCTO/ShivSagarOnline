<div class="container">



    <!-- display errors -->
    <!-- display warnings -->
    <!-- display success -->
    <!-- display success -->





    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Plans</a>
        </li>
        <li class="breadcrumb-item active">Plan List</li>
    </ol>

    <div class="card">
        <div class="card-header">

            <h3 class="card-title"><i class="fa fa-list"></i> Plans </h3>
            <div class="flex-fill text-right">
                <a href="/Plan/Create" class="btn btn-success"> <i class="fa fa-plus"></i> Add Plan</a>
            </div>
        </div>
        <div class="card-body">
            <table id="myTable" class="table table-striped table-bordered dt-responsive">
                <thead>
                    <tr>
                        <th>Plan Name</th>
                        <th>Plan Code</th>
                        <th>Description</th>
                        <th>Plan Frequency</th>
                        <th>Monthly Price</th>
                        <th>Yearly Price</th>
                        <th>Active</th>
                        <th>Products</th>
                        <th>Users</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>

        </div>
    </div>









</div>

@section scripts{



    <script>


        var _datatable = "";

        $(document).ready(function () {
            _datatable = $("#myTable").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "/Plan/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [

                        {

                            "data": "PlanName", "name": "PlanName", "autoWidth": true
                        },
                          {

                              "data": "Plancode", "name": "Plancode", "autoWidth": true
                          },
                           {

                               "data": "Description", "name": "Description", "autoWidth": true
                           },
                            {

                                "data": "PlanFrequency", "name": "PlanFrequency", "autoWidth": true
                            },
                            {

                                "data": "MonthlyPrice", "name": "MonthlyPrice", "autoWidth": true
                            },
                            {

                                "data": "YearlyPrice", "name": "YearlyPrice", "autoWidth": true
                            },
                             {

                                 "data": "IsActive", "name": "IsActive", "autoWidth": true
                             },
                            {

                                "data": "ProductBucketCount", "name": "ProductBucketCount", "autoWidth": true
                            },
                              {

                                  "data": "UserBucketCount", "name": "UserBucketCount", "autoWidth": true
                              },
                         {
                             "orderable": false,
                             "mRender": function (data, type, row) {
                                 var _a = '<a href="/Plan/Details/' + row.Id + '"  class="btn btn-info" data-toggle="tooltip" data-placement="top" title="" data-original-title="Details" ><i class="fa fa-list"  align="center"></i></a>';
                                 var _b = '<a onclick="UpdatePlanStatus(' + row.Id + ')"  class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="" data-original-title="Toggle plan" ><i class="fa fa-check"  align="center"></i></a>';
                                 return '<a href="/Plan/Edit/' + row.Id + '" class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><i class="fa fa-pencil"  align="center"></i></a>  ' + _a + _b;
                             }
                         },
                ]
            });
        });



        function UpdatePlanStatus(Id) {
            var _confirm = confirm("Are you sure you want to toggle this plan ?");
            if (_confirm) {

                $.ajax({
                    url: "/Plan/TogglePlan",
                    data: JSON.stringify({ ID: Id }),
                    type: 'POSt',
                    contentType: 'application/json',
                    dataType: 'json',
                    success: function (result) {
                        if (result.Success === true) {
                            _datatable.clear().draw();
                        } else {
                            alert("error occurred during operation.");
                        }
                    },
                    error: function (req, status, error) {
                        alert(error);
                    }
                });
            }
        }
    </script>
}