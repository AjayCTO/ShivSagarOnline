@model SHIVAM_ECommerce.Models.UnitOfMeasures

@{
    ViewBag.Title = "Create";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/UnitOfMeasures">Unit Of Measures</a>
    </li>
    <li class="breadcrumb-item active">Unit Of MeasuresName Create</li>
</ol>

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><i class="fa fa-plus"></i> Create New Unit Of Measures</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.UnitOfMeasuresName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.UnitOfMeasuresName, new { @class = "form-control col-md-5" })
                        @Html.ValidationMessageFor(model => model.UnitOfMeasuresName)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>

        }
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
